<launch>
	<!-- Arguments -->
	<arg name="map_file" default="$(find F11Robo)/map/mymap1.yaml"/>
	<arg name="open_rviz" default="true"/>
	<arg name="move_forward_only" default="false"/>
	<arg name="cmd_vel_topic" default="F11Robo/diff_drive_controller/cmd_vel"/>
	<arg name="scan_topic" default="laser_link/scan"/>

	<!-- Map server -->
	<node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

	<!-- AMCL -->
	<include file="$(find F11Robo)/launch/amcl.launch">
		<arg name="scan_topic" value="$(arg scan_topic)"/>
	</include>

	<!-- move_base -->
	<include file="$(find F11Robo)/launch/move_base.launch">
		<arg name="move_forward_only" value="$(arg move_forward_only)"/>
		<arg name="cmd_vel_topic" value="$(arg cmd_vel_topic)"/>
	</include>

	<!-- rviz -->
	<group if="$(arg open_rviz)">
		<node pkg="rviz" type="rviz" name="rviz" required="true"
			args="-d $(find F11Robo)/rviz/navigation_gazebo.rviz"/>
	</group>
</launch>
